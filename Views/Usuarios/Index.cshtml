

@model IEnumerable<CineManager.Models.Entities.Usuario>
@{ 
    ViewData["Title"] = "Usuarios"; 
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Usuarios</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear Usuario
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Tipo Documento</th>
                    <th>Número Documento</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Dirección</th>
                    <th>Departamento</th>
                    <th>Provincia</th>
                    <th>Distrito</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var it in Model) 
                { 
                    <tr>
                        <td>@it.Id</td>
                        <td>@it.TipoDocumento</td>
                        <td>@it.NumeroDocumento</td>
                        <td>@it.Nombre</td>
                        <td>@it.Apellido</td>
                        <td>@it.Correo</td>
                        <td>@it.Direccion</td>
                        <td>@(it.Departamento?.Nombre ?? "-")</td>
                        <td>@(it.Provincia?.Nombre ?? "-")</td>
                        <td>@(it.Distrito?.Nombre ?? "-")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@it.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@it.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}